        <body>
            <!-- Header -->
            <header class="header">
                <div class="grid">
                    <nav class="header__navbar">
                        <ul class="header__navbar-list">
                            <li class="header__navbar-item">
                                Vào cửa hàng trên ứng dụng DaBook
                            </li>
                        </ul>

                        <ul class="header__navbar-list">
                            <div class="header__language-select">
                                <span class="header__language-select-label">Ngôn ngữ</span>
                                <i class="header__language-select-icon ti-angle-down"></i>
                                <ul class="header__language-option">
                                    <li class="header__language-option-item header__language-option-item--active">

                                        <span>Việt Nam</span>
                                        <i class=" ti-check"></i>
                                    </li>
                                    <li class="header__language-option-item">
                                        <span>English</span>
                                        <i class=" ti-check"></i>
                                    </li>
                                </ul>
                            </div>
                            <li class="header__navbar-item">
                                <div href="" class="header__navbar-item--link open-login-noti">
                                    <i class="header__navbar-icon ti-bell "></i>
                                    Thông báo
                                </div>
                            </li>
                            <li class="header__navbar-item">
                                <a href="" class="header__navbar-item--link">
                                    <i class="header__navbar-icon far fa-question-circle"></i>
                                    Trợ giúp
                                </a>
                            </li>
                            <li class="header__navbar-item header__navbar-item--separate">
                                <div href="" class="header__navbar-item--link open-login">
                                    Đăng nhập
                                </div>
                            </li>
                            <a class="header__navbar-item">
                                <div href="" class="header__navbar-item--link open-signup">
                                    Đăng ký
                                </div>
                            </a>
                        </ul>
                    </nav>

                    <!-- log in -->
                    <div class="modal modal__login">
                        <div class="modal__overlay"></div>
                        <div class="modal__body">
                            <!--login form-->
                            <div class="auth-form">
                                <div class="auth-form__container">
                                    <div class="auth-form__header">
                                        <h3 class="auth-form__heading">ĐĂNG NHẬP</h3>
                                    </div>
                                    <div class="modal-close">
                                        <i class="ti-close"></i>
                                    </div>

                                    <div class="auth-form__form">
                                        <div class="auth-form__group">
                                            <label class="auth-form__label">Tên tài khoản/Email</label>
                                            <input type="text" class="auth-form__input"
                                                   placeholder="Nhập tên tài khoản hoặc Email">
                                        </div>
                                        <div class="auth-form__group">
                                            <label class="auth-form__label">Mật khẩu</label>
                                            <input type="password" class="auth-form__input" placeholder="Nhập mật khẩu">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkswiper-slide box">
                                            <input type="checkswiper-slide box" class="custom-control-input"
                                                   id="customControlInline" style="margin-top: 2px;">
                                            <label class="custom-control-label" for="customControlInline">
                                                Remember me
                                            </label>
                                        </div>
                                    </div>

                                    <div class="auth-form__controls">
                                        <button class="btn btn--primary btn__login">Đăng nhập</button>
                                    </div>

                                    <div class="auth-form__socials">
                                        <a href="" class="auth-form__socials--fb btn btn--with-icon">
                                            <i class="auth-form__socials-icon fab fa-facebook-square"></i>
                                            <span>Đăng nhập với Facebook</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sign up -->
                    <form action="/Client/DangKy" method="post">

                        <div class="modal modal-logup">
                            <div class="modal__overlay"></div>

                            <div class="modal__body">

                                <div class="auth-form">
                                    <div class="auth-form__container">
                                        <div class="auth-form__header">
                                            <h3 class="auth-form__heading">ĐĂNG KÝ</h3>
                                        </div>
                                        <div class="modals-close">
                                            <i class="ti-close"></i>
                                        </div>

                                        <div class="auth-form__form">
                                            <div class="auth-form__group">
                                                <label class="auth-form__label">Tên tài khoản</label>
                                                <input type="text" class="auth-form__input" name="matk" placeholder="Nhập tên tài khoản">
                                            </div>
                                            <div class="auth-form__group">
                                                <label class="auth-form__label">Email</label>
                                                <input type="text" class="auth-form__input" name="email" placeholder="Nhập Email">
                                            </div>
                                            <div class="auth-form__group">
                                                <label class="auth-form__label">Mật khẩu</label>
                                                <input type="password" class="auth-form__input" name="matkhau" placeholder="Nhập mật khẩu">
                                            </div>
                                            <div class="auth-form__group">
                                                <label class="auth-form__label">Xác nhận mật khẩu</label>
                                                <input type="password" class="auth-form__input" name="matkhau" placeholder="Nhập lại mật khẩu">
                                            </div>
                                        </div>

                                        <div class="auth-form__controls">
                                            <button class="btn btn--primary btn__signin">Đăng ký</button>
                                        </div>

                                        <div class="auth-form__socials">
                                            <a href="" class="auth-form__socials--fb btn btn--with-icon">
                                                <i class="auth-form__socials-icon fab fa-facebook-square"></i>
                                                <span class="auth-form__socials-title">
                                                    Kết nối với Facebook
                                                </span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- header-with-search-->
                    <div class="header-with-search">
                        <div class="header__logo">
                            <a href="#" class="header__logo-link">
                                <img class="header__logo-img" src="~/assets/img/logo.png" alt="">
                            </a>
                        </div>

                        <div class="header__search">
                            <input type="text" class="header__search-input" placeholder="Nhập sản phẩm muốn tìm kiếm">
                            Search button
                            <button class="header__search-btn">
                                <i class="header__search-btn-icon fas fa-search"></i>
                            </button>
                        </div>

                        <div class="header__cart">
                            <i class="header__cart-icon ti-shopping-cart"></i>
                        </div>
                    </div>
                </div>
    </header>
